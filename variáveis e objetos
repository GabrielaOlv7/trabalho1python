#conversão de valores para inteiro
var = input("Informe um valor: 999")
print(type(var))
var = int(var)
print(type(var))
<class'str'>
<class'int'>
#para float
var = input("Informe um valor: 999")
print(type(var))
var = float(var)
print(type(var))
<class'str'>
<class'float'>
